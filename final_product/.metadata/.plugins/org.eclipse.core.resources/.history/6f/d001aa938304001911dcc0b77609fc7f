	}
	
	
public Boolean CreateItem( String list_Q , String image , String description ,  String location , String date ) throws SQLException {
		
		String sql = "INSERT INTO user (listofquestions , location , description , date , image) VALUES (?,?,?,?,?) ";
		
		PreparedStatement statement = con.prepareStatement(sql);
		statement.setString( 1 , list_Q);  
		statement.setString( 2 , location);
		statement.setString( 3 , description);
		statement.setString( 4 , date);
		statement.setString( 5 , image);
		statement.executeUpdate();
		
		
		return true ;
		
	}
	
	
}
